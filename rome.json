{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "ignore": [".next", "out", "build", "dist", ".vscode", ".vitepress/cache"],
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": [".next", "out", "build", "dist", ".vscode", ".vitepress/cache"],
    "indentStyle": "space",
    "indentSize": 2
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  }
}
