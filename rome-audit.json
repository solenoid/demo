{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "ignore": [".next", "out", "build", "dist", ".vscode", ".vitepress/cache"],
    "indentStyle": "space",
    "indentSize": 3
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "quoteStyle": "double",
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "enabled": false
  }
}
